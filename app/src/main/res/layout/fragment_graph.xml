<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5a5a5a"
    tools:context=".fragment.GraphFragment">
    <Button
        android:id="@+id/da"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:elevation="20dp"
        android:textColor="@color/black"
        android:text="保存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/school_name2"
        android:layout_width="300dp"
        android:layout_height="200dp"/>

    <com.viatom.littlePu.er2.view.WaveView
        android:elevation="10dp"
        android:layout_marginTop="200dp"
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="3:2"
        android:layout_height="0dp"/>
    <com.viatom.littlePu.er2.view.WaveViewBackGround
        android:layout_marginTop="200dp"
        android:id="@+id/waveView2"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="3:2"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/peak"
        app:layout_constraintTop_toBottomOf="@+id/waveView2"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Peek Current:"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>